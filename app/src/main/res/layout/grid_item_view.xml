<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/radiusset"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/grid_image_view1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/radiusset"
            android:layout_gravity="center_horizontal"
           />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gridView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/goodsName"
            android:textColor="#222222"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/gridView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:text="2021年2月3日 08:01:03"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/gridView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="产品描述"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>